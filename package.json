{
	"name": "@altiva/altiva",
	"version": "2.0.12",
	"description": "Altiva Framework: Development for Humans",
	"repository": {
		"type": "git",
		"url": "git://github.com/altiva/altiva.git"
	},
	"main": "altiva.js",
	"bin": {
		"altiva": "cli.js"
	},
	"scripts": {
		"build": "rollup --config other/rollup/shared.js && rollup --config other/rollup/cli.js",
		"prepare": "npm run build",
		"test": "jest"
	},
	"author": "Paulo Coghi",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/altiva/altiva/issues"
	},
	"jest": {
		"coverageDirectory": "./coverage/",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"**/src/utils/**",
			"**/src/generators/*/*.js",
			"**/src/modes/*/*.js",
			"!**/src/modes/all/rsyncAssets.js",
			"!**/src/utils/uglify/options.js",
			"!**/src/utils/updateOptions.js",
			"!**/node_modules/**"
		],
		"verbose": true
	},
	"devDependencies": {
		"babel-plugin-rewire": "^1.1.0",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
		"connect-history-api-fallback": "^1.4.0",
		"fs-extra": "^5.0.0",
		"glob": "^7.1.2",
		"hjson": "^3.1.1",
		"jest": "^22.4.3",
		"mri": "^1.1.0",
		"page": "github:altiva/page.js#master",
		"rollup": "^0.57.1",
		"rollup-plugin-commonjs": "^9.1.0",
		"rollup-plugin-json": "^2.3.0",
		"rollup-plugin-node-resolve": "^3.3.0",
		"rollup-plugin-string": "^2.0.2",
		"rollup-plugin-uglify": "^3.0.0"
	},
	"dependencies": {
		"browser-sync": "^2.23.6",
		"chokidar": "^2.0.3",
		"rsyncwrapper": "^2.0.1",
		"svelte": "^1.60.2",
		"uglify-es": "^3.3.10"
	}
}
